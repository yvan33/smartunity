{% extends "SmartUnityAppBundle::layoutLog.html.twig" %}
{% form_theme form_contact 'SmartUnityUtilisateurBundle:Form:form_register.html.twig' %}
{% block title %} Smart'Unity - Nous contacter {% endblock %}

{% block stylesheets %}

<link href="{{ asset('assets/css/formulaire.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}


<div class="row">
    <div class="col-md-offset-1 col-md-10">
<div class="row text-center cookie-title">
<form action="{{ path('smart_unity_app_contactPage') }}" {{ form_enctype(form_contact) }} method="POST" 	class="fos_user_registration_register">
		<div class="row text-center cookie-title">
        	Formulaire de contact
        </div>
        <div>{{confirmation }}</div>

<div class="erreur">
                    <p>{{form_errors(form_contact.email)}}</p>
                    <p>{{form_errors(form_contact.message)}}</p>
                    <p>{{form_errors(form_contact.sujet)}}</p>

</div>

<fieldset>
                
                    <div class="row premiere-ligne ">
                        <div class="grille-1 label-normal">{{form_label(form_contact.email)}}<span style="color: red;"> *</span></div>
                        <div class="grille-2">{{form_widget(form_contact.email)}}</div>
                    </div> 
                    <div class="row">
                        <div class="grille-1">{{form_label(form_contact.sujet)}}<span style="color: red;"> *</span></div>
                        <div class="grille-2">{{form_widget(form_contact.sujet)}}</div>
                    </div> 
                    <div class="row">
                        <div class="grille-1">{{form_label(form_contact.message)}}<span style="color: red;"> *</span></div>
                        <div class="grille-2">{{form_widget(form_contact.message)}}</div>
                    </div>  

                    <div class="cent-h bouton-bas-block">
                        <button type="submit" class="btn btn-primary btn-lg">Envoyer</button>
                    </div> 
                </fieldset>
</form>

  {{ form_end(form_contact)}}
</div>
  </div>
</div>

                


 


  </div>
</div>

{% endblock %}

