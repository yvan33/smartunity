<script>
    var positionElementInPage = $('.nav-fixe').offset().top;
        $(window).scroll(
            function() {
                if ($(window).scrollTop() >= positionElementInPage) {
                    // fixed
                    $('.nav-fixe').addClass("fixee");
                    $('#cont').addClass("fixe-cont");
                } else {
                    // relative
                    $('.nav-fixe').removeClass("fixee");
                    $('#cont').removeClass("fixe-cont");
                }
            }
        );
</script>

