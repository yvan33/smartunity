                <img src="{{ asset('assets/img/logo-iphon.png') }}"/>
                <p class="red-dot">1</p>
            </a>
            <a href="{{ path('fos_user_profile_show') }}" class="valign-col-all pad-l"><p>{{ app.user.username }}</p></a>
          </div>
