      <div class="col-md-offset-1 col-md-6"><img src="{{ asset('assets/img/logo-su.png') }}"  class="img-responsive logo cent-h"/></div>
      <div class="col-md-5 cent-h">

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}


          <div class="cent-h logo2">
