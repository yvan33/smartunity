{% extends "SmartUnityUtilisateurBundle::layout_profil.html.twig" %}
{% form_theme form_infos 'SmartUnityUtilisateurBundle:Form:form_div_layout.html.twig' %}
{% form_theme form_pref 'SmartUnityUtilisateurBundle:Form:form_div_layout.html.twig' %}

{% block edition %}

<div class="edit">
    <a class="btn btn-primary btn-xs" type="button" onclick="javascript:history.back()">Annuler
    </a>
</div>  
    

<form action="{{ path('smart_unity_utilisateur_setinfos') }}" {{ form_enctype(form_infos) }} method="POST">

{#{{form_start(form_infos)}}#}
    {{form_errors(form_infos)}}

    <div class="row premiere-ligne ">
        <div class="grille-1">
        Nom d'utilisateur
        </div>
        <div class="grille-2">
        {{form_widget(form_infos.username)}}
        </div>
    </div>

    <div class="row  ">
        <div class="grille-1">
        Nom :
        </div>
        <div class="grille-2">
        {{form_widget(form_infos.nom)}}
        </div>
    </div>
    
    <div class="row  ">
        <div class="grille-1">
        Prénom :
        </div>
        <div class="grille-2">
        {{form_widget(form_infos.prenom)}}
        </div>
    </div>
    
    <div class="row  ">
        <div class="grille-1">
        Email :
        </div>
        <div class="grille-2">
        {{form_widget(form_infos.email)}}
        </div>
    </div>

    <div class="row  ">
        <div class="grille-1">
        Genre :
        </div>
        <div class="grille-2">
        {{form_widget(form_infos.sexe)}}
        </div>
    </div>    

    <div class="row  ">
        <div class="grille-1">
        Date de naissance :
        </div>
        <div class="grille-2">
        {{form_widget(form_infos.date_naissance)}}
        </div>
    </div>

    <div class="row  ">
        <div class="grille-1">Appareil:</div>
        <div class="grille-2"></div>
    </div>
    <div class="row  ">
        <div class="grille-1">Un peu plus sur moi:</div>
        <div class="grille-2"></div>
    </div>

    <div class="cent-h bouton-bas-block">
        <button type="submit" class="btn btn-primary btn-sm">Valider mes infos</button>
    </div>   
    {{form_end(form_infos)}}  

</form>

{% endblock %}   

{% block preferences %}  

<form action="{{ path('smart_unity_utilisateur_setpref') }}" {{ form_enctype(form_pref) }} method="POST">
    {{form_errors(form_pref)}}

    <div class="premiere-ligne ">Je souhaite recevoir des notifications par Email pour:
    </div>
    <div class="row premiere-ligne ">
        <div class="grille-1 pref">Un message privé:</div>
        <div class="grille-2 pref radio-pref">{{form_widget(form_pref.pref_mp)}}</div>
    </div>
    <div class="row  ">
        <div class="grille-1 pref">Un commentaire:</div>
        <div class="grille-2 pref radio-pref">{{form_widget(form_pref.pref_comm)}}</div>
    </div>
    <div class="row  ">
        <div class="grille-1 pref">Le message sur le Smart'Café:</div>
        <div class="grille-2 pref radio-pref">{{form_widget(form_pref.pref_smartcafe)}}</div>
    </div>
    <div class="row  ">
        <div class="grille-1 pref">Une réponse à une question:</div>
        <div class="grille-2 pref radio-pref">{{form_widget(form_pref.pref_rep)}}</div>
    </div>
    <div class="row  ">
        <div class="grille-1 pref">Une de mes réponses à été validée:</div>
        <div class="grille-2 pref radio-pref">{{form_widget(form_pref.pref_repValidee)}}</div>
    </div>
    <div class="row  ">
        <div class="grille-1 pref">Smart'Solution:</div>
        <div class="grille-2 pref radio-pref">{{form_widget(form_pref.pref_repCertifiee)}}</div>
    </div>

    <div class="cent-h bouton-bas-block">
        <button type="submit" class="btn btn-sm btn-default">Valider mes préférences

    </div>

{{form_end(form_pref)}}   
</form> 

{% endblock %}
