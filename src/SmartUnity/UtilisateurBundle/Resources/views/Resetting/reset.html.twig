{% extends "SmartUnityUtilisateurBundle::layout.html.twig" %}

{% block title %}Choisir un nouveau mot de passe{% endblock %}

{% block stylesheets %} 
<link href="{{ asset('assets/css/formulaire.css') }}" rel="stylesheet" type="text/css">
{%endblock%}

{% block fos_user_content %}

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="panneau-bas">
		<div class="row text-center cookie-title">
                Choisir votre nouveau mot de passe
            </div>

			<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

                    <div class="grille-1-reinitialisation">
                         <label class="label-normal police-text" for="username">Nouveau mot de passe</label>
                         <label class="label-normal police-text" for="username" style="width:250px;" >Confirmation du mot de passe</label>
                    </div>
                    
                    <div class="grille-2-reinitialisation">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control forminfo' }})}}
                    </div>
                    <div class="grille-2-reinitialisation">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control forminfo' }})}}
                    </div>
                            
                    
					<div>
						<input type="submit" class="btn bouton-envoyer" style="margin-top: 20px;" value="RÃ©initialiser" /> 
					</div>
			{{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock fos_user_content %}
