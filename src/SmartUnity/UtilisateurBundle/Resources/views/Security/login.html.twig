{% extends "SmartUnityAppBundle::layoutLog.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
{% if error %}
<div>{{ error|trans }}</div>
{% endif %}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title cent-h">Connexion</h3>
                </div>
                <div class="panel-body logo2">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" style="background-color: #FFF; color:#666" placeholder="pseudo" type="text" id="username" name="_username" value="{{ last_username }}" required="required">        
                            </div>
                            <div class="form-group">
                                <input class="form-control" style="background-color: #FFF; color:#666" placeholder="Password" type="password" id="password" name="_password" required="required">
                            </div>
                            <div style="margin-top: -14px;"><a href="{{ path("fos_user_resetting_request") }}">Mot de passe oubli√©?</a></div>
                            <div class="checkbox souvenir-de-moi" >
                                <label>
                                    <input id="remember_me" type="checkbox"  name="_remember_me" value="on" > Se souvenir de moi
                                </label>
                            </div>
                            <input class="btn btn-lg btn-success btn-block" id="_submit" name="_submit" type="submit" value="Login" style="line-height:14px">
                            <div class="pad-l">{{ facebook_login_button({'autologoutlink': false}) }}</div>
                            <a href="{{ path('fos_user_registration_register') }} ">
                                <p  style=" margin-top: 20px;">S'inscire</p>
                            </a>

                        </fieldset>
                    </form>
                </div> 
            </div>
        </div>
    </div>
</div>
{% endblock %}

