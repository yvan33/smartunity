{% block title %}Connexion à Smart'Unity{% endblock %}

{% extends "SmartUnityAppBundle::layoutLog.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
{% if error %}
<div style="margin-bottom: 20px;">{{ error|trans }}</div>
{% endif %}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default cent-h panel-login">
                <div class="panel-heading">
                    <h3 class="panel-title cent-h">Se connecter</h3>
                </div>
                <div class="panel-body logo2">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" style="background-color: #FFF; color:#666" placeholder="Nom d'utilisateur" type="text" id="username" name="_username" value="{{ last_username }}" required="required">        
                            </div>
                            <div class="form-group">
                                <input class="form-control" style="background-color: #FFF; color:#666" placeholder="Mot de passe" type="password" id="password" name="_password" required="required">
                            </div>
                            <div class="mdp-oublie-fix"><a href="{{ path("fos_user_resetting_request") }}">Mot de passe oublié?</a></div>
                            <div class="checkbox souvenir-de-moi-fix" >
                                <label>
                                    <input id="remember_me_fix" type="checkbox"  name="_remember_me" value="on" >Se souvenir de moi
                                </label>
                            </div>
                            <input class="btn bouton-login-fix" id="_submit" name="_submit" type="submit" value="Connexion" style="line-height:14px">
                        </fieldset>
                    </form>
                    <p class="ou-fb-fixed">ou alors avec Facebook :</p>
                    <div class="pad-l">{{ facebook_login_button({'autologoutlink': false, 'size': 'large', 'label': "Se connecter"}) }}</div>
                            <a href="{{ path('fos_user_registration_register') }} ">
                                <input class="btn btn-lg bouton-signin-fix" id="_submit" name="_submit" type="submit" value="S'inscrire" style="line-height:14px">
                            </a>
                </div> 
            </div>
        </div>
    </div>
</div>
{% endblock %}

