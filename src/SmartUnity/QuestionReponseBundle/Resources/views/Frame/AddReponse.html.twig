{% extends "SmartUnityAppBundle::layoutLog.html.twig" %}
{% form_theme formReponse 'SmartUnityUtilisateurBundle:Form:form_register.html.twig' %}

{% block title %}Posez votre question{% endblock %}

{% block stylesheets %}
{% stylesheets filter='cssrewrite, yui_css'
				 'assets/css/formulaire.css'
				 'assets/css/magnificpopup.css' %}
<link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
{% endstylesheets %}
{% endblock %}


{% block body %}
{#<a ><span class="glyphicon glyphicon-chevron-left bouton-retour" onclick="javascript:history.back()"></span></a>#}

<div class="row">
{#        <div class="grille-content panneau-bas">  #}
            <div class="row text-center cookie-title">
                Répondez à la question
            </div>
		
		{{ form_start(formReponse)}}
		<div class="erreur">
            {{ form_errors(formReponse) }}
	    </div>
	    <div class="row premiere-ligne">
	        <div class="grille-1">{{ form_label(formReponse.description) }}</div>
	        <div class="grille-2 text-area">{{ form_errors(formReponse.description) }}{{ form_widget(formReponse.description, { 'attr': {'class': 'text-description'}}) }}</div>
	    </div>
	    {{form_end(formReponse)}}
	</div>

<script>
$(".chosen-select").chosen({disable_search_threshold: 10, allow_single_deselect: true });
</script>

<script>
$(document).ready(function(){
  $('#popupDotation').tooltip();
  $('#popupDotation').click(function(e){
    e.preventDefault();
  })
});

</script>
{% endblock %}

